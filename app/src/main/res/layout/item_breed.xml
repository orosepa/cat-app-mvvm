<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/small_100">

    <ImageView
        android:id="@+id/ivBreedImage"
        android:layout_width="@dimen/xlarge_175"
        android:layout_height="@dimen/xlarge_175"
        android:background="@color/primaryLightColor"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/twItemBreed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ivBreedImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivBreedImage"
        app:layout_constraintTop_toTopOf="@+id/ivBreedImage"
        tools:text="@string/breeds" />

</androidx.constraintlayout.widget.ConstraintLayout>